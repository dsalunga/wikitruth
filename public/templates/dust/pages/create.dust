{>"dust/layouts/master" /}

{<title}
    {?page}Edit{:else}New{/page} Page - {titleSlogan}
{/title}

{<body}
    <h1 class="page-header text-primary">
        <span class="text-muted"><i class="fa fa-book"></i> <a href="/pages">Pages</a> / {?page}<a href="/pages/page?id={page._id}">{page.title}</a> / Edit{:else}New Page{/page}</span></h1>
    <form method="post">
        <input type="hidden" name="_csrf" value="{_csrf}">
        <div class="form-group">
            <label for="inputTitle">Title</label>
            <input type="text" name="title" id="inputTitle" value="{page.title}" class="form-control"/>
        </div>
        <div class="form-group">
            <label for="inputContent">Content</label>
            <textarea class="form-control" id="inputContent" name="content" rows="12">{page.content}</textarea>
        </div>
        <div class="form-group">
            <label for="inputId">ID</label>
            <input type="text" name="id" id="inputId" value="{page.id}" class="form-control"/>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>&nbsp;
        <a class="btn btn-default" href="/pages{?page}/page?id={page._id}{/page}" role="button">Cancel</a>
    </form>
{/body}
