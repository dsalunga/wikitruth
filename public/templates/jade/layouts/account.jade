doctype html
html
  head
    block head
      title #{title}
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='/css/app.min.css?#{cacheBreaker}')
    link(rel='stylesheet', href='/layouts/core.min.css?#{cacheBreaker}')
    include favicon.jade
    block neck
  body
    div.navbar.navbar-default.navbar-fixed-top
      div.container
        div.navbar-header
          a.navbar-brand(href='/')
            img.navbar-logo(src='/img/logo-64x64.png', alt='Logo')
            span.navbar-brand-label #{projectName}
          button.navbar-toggle.collapsed(data-toggle='collapse', data-target='.my-navbar-collapse')
            span.icon-bar
            span.icon-bar
            span.icon-bar
        div.navbar-collapse.my-navbar-collapse.collapse
          ul.nav.navbar-nav
            //li: a(href='/') Home
            li: a(href='/explore')
              i.fa.fa-globe
              = ' '
              span.hidden-xxxs
                | Explore
            li: a(href='/search')
              i.fa.fa-search
              = ' '
              span.hidden-xxs
                | Search
            //li: a(href='/account/settings/') Settings
          ul.nav.navbar-nav.navbar-right
            include account-nav.jade

    div.page
      div.container
        block body

    include footer.jade

    block feet
