doctype html
html
  head
    block head
      title #{title}
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='/layouts/core.min.css?#{cacheBreaker}')
    block neck
  body
    div.navbar.navbar-default.navbar-fixed-top
      div.container
        div.navbar-header
          a.navbar-brand(href='/')
            img.navbar-logo(src='/img/logo-64x64.png', alt='Logo')
            span.navbar-brand-label #{projectName}
          button.navbar-toggle.collapsed(data-toggle='collapse', data-target='.my-navbar-collapse')
            span.icon-bar
            span.icon-bar
            span.icon-bar
        div.navbar-collapse.my-navbar-collapse.collapse
          ul.nav.navbar-nav
            //li: a(href='/') Home
            li: a(href='/account/') Home
            li: a(href='/pages/') My Pages
            //li: a(href='/account/settings/') Settings
          ul.nav.navbar-nav.navbar-right
            li.dropdown
              a.dropdown-toggle(href='#', data-toggle='dropdown')
                i.fa.fa-user
                |  #{user.username}&nbsp;
                span.caret
              ul.dropdown-menu
                if user && user.isAdmin
                  li: a(href='/admin') Admin Area
                li: a(href='/account') My Account
                li: a(href='/account/settings/') Settings
                li.divider
                li: a(href='/logout/') Sign Out

    div.page
      div.container
        block body

    div.footer
      div.container
        div.inner
          span.copyright.pull-right
            |&#169; #{copyrightYear}&nbsp;
            a(href='https://github.com/wikitruth', target='_blank') #{copyrightName}
          ul.links
            li: a(href='/') Home
            li: a(href='https://www.facebook.com/wikitruth.co') Facebook
            //li: a(href='//blog.wikitruth.co') Blog
            li: a(href='/about/') About
            li: a(href='/contact/') Contact
          div.clearfix

    div.ajax-spinner
      img(src='/img/ajax-pulse.gif', alt='Loading')

    //if lte IE 9
      script(src='/layouts/ie-sucks.min.js?#{cacheBreaker}')
    script(src='/layouts/core.min.js?#{cacheBreaker}')

    block feet
